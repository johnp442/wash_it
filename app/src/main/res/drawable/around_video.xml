<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle">
                <solid android:color="@android:color/transparent" /> <!-- Define o fundo como transparente -->
                <corners android:radius="15dp"  />
                <stroke android:width="10dp" android:color="@color/black"/>
                <!-- Raio grande para formar bordas arredondadas -->
            </shape>
        </clip>
    </item>

    <!-- Adicione um segundo item para criar uma borda colorida -->
    <item android:right="5dp" android:left="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Cor da borda -->
            <corners android:radius="10dp" /> <!-- Raio para formar bordas arredondadas na borda -->
        </shape>
    </item>
</layer-list>
